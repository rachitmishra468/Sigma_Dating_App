<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RippleEffect">
        <attr name="rb_color" format="color"/>
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>


    <declare-styleable name="RangeSeekBar">
        <attr name="absoluteMinValue" format="integer" />
        <attr name="absoluteMaxValue" format="integer" />
        <attr name="singleThumb" format="boolean" />
    </declare-styleable>



    <declare-styleable name="CardViewChanger">
        <attr name="SwipeFlingStyle" format="reference"/>
        <attr name="rotation_degrees" format="float"/>
        <attr name="opacity_end" format="float"/>
        <attr name="min_adapter_stack" format="integer"/>
        <attr name="max_visible" format="integer"/>
        <attr name="left_swipe_detect" format="boolean"/>
        <attr name="right_swipe_detect" format="boolean"/>
        <attr name="top_swipe_detect" format="boolean"/>
        <attr name="bottom_swipe_detect" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SwipePageView">
        <attr name="SwipeFlingPageStyle" format="reference"/>
        <attr name="min_adapter_stack_page" format="integer"/>
        <!--<attr name="max_visible" format="integer"/>-->
    </declare-styleable>


    <attr format="string" name="fontPath"/>
    <item name="calligraphy_tag_id" type="id"/>

    <declare-styleable name="BounceScrollView">
        <attr name="damping" format="float"/>
        <attr name="scrollOrientation" format="enum">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="incrementalDamping" format="boolean"/>
        <attr name="bounceDelay" format="integer"/>
        <attr name="triggerOverScrollThreshold" format="integer"/>
    </declare-styleable>
</resources>