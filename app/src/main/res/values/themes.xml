<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SigmaDatingApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hint_text_color</item>
        <item name="colorSecondaryVariant">@color/hint_text_color</item>
        <item name="colorOnSecondary">@color/hint_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/varela_regular</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">36dp</item>
        <item name="cornerSizeTopLeft">36dp</item>
        <item name="cornerSizeBottomRight">0dp</item>

        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="android:theme">@style/CardView</item>
        <item name="elevation">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="cornerSizeTopRight">48dp</item>
    </style>


    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="fontFamily">@font/varela_regular</item>
    </style>



    <style name="NormalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="fontFamily">@font/varela_regular</item>
    </style>

    <style name="grey_NormalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#BE5E5A5A</item>
        <item name="android:typeface">monospace</item>
        <item name="fontFamily">@font/varela_regular</item>
    </style>

    <style name="blue_NormalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_blue_900</item>
        <item name="android:typeface">monospace</item>
        <item name="fontFamily">@font/varela_regular</item>
    </style>



    <style name="Theme.SigmaDatingApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SigmaDatingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SigmaDatingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SigmaDatingApp.Fullscreen" parent="Theme.SigmaDatingApp">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.SigmaDatingApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SigmaDatingApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <!-- <item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>



</resources>