<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_f1"
    tools:context=".apk.views.intro_registration.BlankFragment"
    android:layout_marginBottom="28dp"
    android:background="@drawable/splash_bg">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="42sp"
        android:layout_height="42sp"
        app:layout_constraintVertical_weight="4"
        android:visibility="gone"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        app:layout_constraintVertical_weight="6">

        <TextView
            android:id="@+id/textView"
            style="@style/QText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text="@string/tell_us"
            android:textColor="@color/light_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            style="@style/QText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha=".8"
            android:text="I am a"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


 <RadioGroup
    android:id="@+id/rg"
    android:layout_width="0dp"
    app:layout_constraintEnd_toEndOf="@+id/guideline3"
     android:layout_marginLeft="4dp"
     android:layout_marginRight="4dp"
    app:layout_constraintStart_toEndOf="@id/guideline2"
    android:gravity="center_horizontal"
    app:layout_constraintHorizontal_bias="0.058"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/textView5"
    android:layout_height="wrap_content">

     <RadioButton
         android:id="@+id/rb_women"
         android:layout_width="match_parent"
         android:layout_height="54dp"
         android:layout_marginTop="22dp"
         android:layout_marginBottom="2dp"
         android:background="@drawable/gender_selector_drawable"
         android:button="@android:color/transparent"
         android:checked="false"
         android:elevation="4dp"
         android:gravity="center"
         android:paddingLeft="16dp"
         android:paddingTop="15dp"
         android:paddingRight="16dp"
         android:paddingBottom="15dp"
         android:text="Women"

         android:textColor="@drawable/radio_flat_text_selector"
         android:textSize="18sp"
         android:textStyle="bold" />

     <RadioButton
        android:id="@+id/rb_men"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/gender_selector_drawable"
        android:button="@android:color/transparent"
        android:checked="false"
        android:paddingLeft="16dp"
        android:layout_marginBottom="2dp"
        android:elevation="4dp"
        android:layout_height="54dp"
        android:paddingTop="3dp"
        android:paddingRight="16dp"
        android:paddingBottom="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Men"
        android:textColor="@drawable/radio_flat_text_selector" />

    <RadioButton
        android:id="@+id/rb_more"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/gender_selector_drawable"
        android:button="@android:color/transparent"
        android:checked="false"
        android:elevation="4dp"
        android:paddingLeft="16dp"
        android:layout_height="54dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="3dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingRight="16dp"
        android:paddingBottom="3dp"
        android:text="more"
        android:textColor="@drawable/radio_flat_text_selector" />

</RadioGroup>

        <Button
            android:id="@+id/continue_second"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/white_circle_bg"
            android:elevation="22dp"
            android:text="@string/continue_text"
            android:textAllCaps="true"
            android:textColor="@color/hint_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/rg" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>