<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D8000000"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No responsibility disclaimers limit your liability for damages. Views expressed disclaimers allow you to distance yourself from others' opinions. Investment disclaimers state that you take no responsibility for how others act on your advice. No guarantee disclaimers explain "
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_gravity="center|top"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:letterSpacing="0.10"
        android:paddingBottom="32dp"
        android:scrollbars="vertical"
        android:isScrollContainer="true"
        android:maxLines="10"
        android:textStyle="normal"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:paddingBottom="50dp"
        android:orientation="vertical">



        <FrameLayout
            android:id="@+id/framlayout"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <Button
                android:id="@+id/logout"
                android:background="@drawable/signup_circle_bg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="AGREE"
                android:letterSpacing="0.10"
                android:textSize="18dp"
                android:textColor="@color/white" />




        </FrameLayout>





        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="DISAGREE"
            android:layout_margin="20dp"
            android:letterSpacing="0.10"
            android:textSize="18dp"
            android:background="@drawable/login_field_border_bg"
            android:textColor="@color/blue" />






    </LinearLayout>
</FrameLayout>