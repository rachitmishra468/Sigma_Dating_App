<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/constraint_f1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    android:paddingBottom="20dp"
    app:layout_constraintTop_toBottomOf="@id/imageView4"
    app:layout_constraintVertical_weight="6">

    <TextView
        android:id="@+id/textView"
        style="@style/QText"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:paddingLeft="8dp"
        android:textColor="@color/light_text_color"
        app:layout_constraintEnd_toEndOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="8dp"
        android:text="Update Password"
        style="@style/QText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:alpha=".8"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintEnd_toEndOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <EditText
        android:id="@+id/current_password"
        style="@style/NormalText"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/login_field_border_bg"
        android:drawablePadding="10dp"
        android:hint="Enter Your Current Password"
        android:inputType="textPassword"
        android:letterSpacing="0.10"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/hint_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <EditText
        android:id="@+id/editText_password"
        style="@style/NormalText"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/login_field_border_bg"
        android:drawablePadding="10dp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:letterSpacing="0.10"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/hint_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/current_password" />

    <EditText
        android:id="@+id/editText_password_confirm"
        style="@style/NormalText"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/login_field_border_bg"
        android:drawablePadding="10dp"
        android:hint="confirm Password"
        android:inputType="textPassword"
        android:letterSpacing="0.10"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColorHint="@color/hint_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/guideline5"

        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/editText_password" />




    <TextView
       android:id="@+id/hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:paddingLeft="8dp"
        android:text="Password must have at least 8 characters."
        android:textColor="@color/light_blue_900"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/editText_password_confirm"/>


    <Button
        android:id="@+id/create_password"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/signup_circle_bg"
        android:fontFamily="@font/varela_regular"
        android:text="Update Password"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/hint" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>