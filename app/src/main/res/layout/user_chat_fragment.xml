<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:id="@+id/user_chatscreen_recycler"
        android:layout_height="wrap_content"
        tools:listitem="@layout/layout_chat_right"
        tools:itemCount="4"
        app:layout_constraintStart_toStartOf="@id/guideline9"
        app:layout_constraintEnd_toEndOf="@id/guideline10"
        app:layout_constraintTop_toBottomOf="@id/guideline11" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        app:layout_constraintBottom_toTopOf="@+id/layout_gchat_chatbox" />

<LinearLayout
    android:layout_width="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="@id/guideline10"
    app:layout_constraintEnd_toEndOf="@id/guideline10"
    android:weightSum="1"
    app:layout_constraintStart_toStartOf="@id/guideline9"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_gchat_chatbox"
        android:layout_width="0dp"
        android:layout_weight=".9"
        android:layout_height="50dp"
        android:background="@drawable/border_drwable"
        >


        <EditText
            android:id="@+id/edit_gchat_message"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/button_gchat_send"
            android:background="@android:color/transparent"
            android:hint="Enter Message"
            android:paddingLeft="6dp"
            android:inputType="text"
            android:maxLines="6"
            tools:ignore="Autofill" />

        <ImageView
            android:id="@+id/button_gchat_send"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".15"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/send_img"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_send_24"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>